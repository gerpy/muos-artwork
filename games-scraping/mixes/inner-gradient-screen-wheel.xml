<?xml version="1.0" encoding="UTF-8"?>
<artwork>
  <!-- The boxart is full screen (VGA) with the left part beeing mostly transparent, and room let to the top and bottom 42 pixels MuOS UI bars  -->
  <output type="cover" width="640" height="480">
  
    <!-- Gradient PNG starts at x=320 and end at x=400 (middle is x=360) -->
	<!-- The offests and size of the screenshot and wheel are adjusted wrt a previous fullscreen vesrion -->
	<!-- The screenshot heigh is now 396 and no more 480 -->
	<!-- The mix still accomodates 2:3 vertical screenshots -->
    <layer resource="screenshot" height="396" align="center" valign="middle" x="198">
		<blur softness="1"/>
		<opacity value="95"/>
	</layer>
	
    <mask file="muos-noisy-low-gradient.png" width="640" height="480" x="56"/>
	
	<!-- Wheel after the mask to cover it -->
	<!-- (it is larger than the 100% plain but should not be faded by the mask) -->
	
	<layer resource="wheel" width="215" align="center" valign="middle" x="193" y="-90">
		<stroke width="2" red="0" green="0" blue="0"/>
		<shadow distance="8" softness="5" opacity="50"/>
	</layer> 
	
  </output>
 
  <output type="screenshot" width="515" height="275">
	<layer resource="screenshot" height="275" align="center" valign="middle"/>
  </output>
  
  <output type="wheel"/>
  <output type="marquee"/>
  <output type="texture"/>
</artwork>
